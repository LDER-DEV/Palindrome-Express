<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Palindrome Checker</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <div class="container">
      <h1>Palindrome Checker</h1>
      <form id="palindromeForm" action="/palindromes" method="POST">
        <div class="form-group">
          <label for="word">Word:</label>
          <input id="wordInput" class="form-control" type="text" name="word" placeholder="Enter a word">
        </div>
        <button id="clickMe" class="btn btn-primary" type="submit" name="button">Check</button>
      </form>
      <h2 id="result"></h2>
    </div>
    <script type="text/javascript" src="/main.js"></script>
  </body>
</html>
